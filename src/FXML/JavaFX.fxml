<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Label?>

<Pane xmlns:fx="http://javafx.com/fxml" fx:controller="Exo.Exo11" prefHeight="300.0" prefWidth="400.0">
   <Label fx:id="scoreLabel" text="Score: 0" layoutX="20" layoutY="20" style="-fx-font-size: 20;" />

   <Text fx:id="timerText" text="Time left: 30s" layoutX="200" layoutY="20" style="-fx-font-size: 20;" />

   <Button fx:id="targetButton" text="Cliquez moi !" layoutX="150" layoutY="100" prefWidth="100" prefHeight="50" onAction="#onTargetButtonClicked" />
</Pane>
